{
    "require": {
        "symfony/console": "~2.0",
        "jonnyw/php-phantomjs": "4.*"
    },
    "autoload": {
        "psr-4": {
            "Heel\\": "src"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
